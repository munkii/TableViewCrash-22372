            <TableSection x:Name="ConnectedServicesSection" Title="{local:AppResources Settings_ConnectedServicesTitle}">

                <!--  TappedCommand="{Binding ClinicalServiceCommand}"  -->
                <ViewCell>
                    <Frame Style="{StaticResource ViewCellBackground}">
