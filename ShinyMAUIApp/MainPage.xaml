        <!--  Pages  -->
        <ControlTemplate x:Key="CapturePageTemplate">
            <Grid BindingContext="{Binding}">

                <Grid.Padding>
                    <OnPlatform x:TypeArguments="Thickness">
                        <On Platform="iOS" Value="10, 44, 10, 20" />
                        <On Platform="Android" Value="10" />
                    </OnPlatform>
                </Grid.Padding>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="8*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Label
                    Grid.Column="1"
                    HorizontalTextAlignment="Center"
                    Style="{StaticResource CaptureTitleLabel}"
                    Text="{TemplateBinding Parent.Title,
                                           Converter={StaticResource UpperStringConverter}}"
                    VerticalOptions="CenterAndExpand" />

                <ImageButton Grid.Column="2" Command="{TemplateBinding Parent.BindingContext.CloseCommand}">
                    <ImageButton.Source>
                        <FontImageSource
                            FontFamily="IconFont"
                            Glyph="{StaticResource CancelIconText}"
                            Color="{StaticResource DarkColor}" />
                    </ImageButton.Source>
                </ImageButton>

                <ContentPresenter Grid.Row="1" Grid.ColumnSpan="3" />
            </Grid>
        </ControlTemplate>



        <!--  ListViews  -->
        <Style x:Key="HistoricalListViewStyle" TargetType="ListView">
            <Setter Property="IsPullToRefreshEnabled" Value="True" />
            <Setter Property="RowHeight" Value="{StaticResource ListViewRowHeight}" />
            <Setter Property="BackgroundColor" Value="Transparent" />
        </Style>



        <Style x:Key="SettingsStackLayoutStyle" TargetType="StackLayout">
            <Setter Property="Margin" Value="15,5,15,5" />
            <Setter Property="VerticalOptions" Value="CenterAndExpand" />
            <Setter Property="Orientation" Value="Horizontal" />
        </Style>

        <Style x:Key="SettingsDetailsStackLayoutStyle" TargetType="StackLayout">
            <Setter Property="Margin" Value="12,0,0,0" />
            <Setter Property="VerticalOptions" Value="Center" />
        </Style>
        <Style
            x:Key="TableViewCellLabelStyle"
            BasedOn="{StaticResource SemiBoldLabelStyle}"
            TargetType="Label">
            <Setter Property="VerticalOptions" Value="CenterAndExpand" />
            <Setter Property="TextColor" Value="Black" />
            <Setter Property="FontSize" Value="Small" />
        </Style>

        <Style
            x:Key="TableViewCellResultLabelStyle"
            BasedOn="{StaticResource SemiBoldLabelStyle}"
            TargetType="Label">
            <Setter Property="TextColor" Value="{StaticResource DarkGreyColor}" />
            <Setter Property="FontSize" Value="11" />
            <Setter Property="VerticalOptions" Value="Center" />
            <Setter Property="VerticalTextAlignment" Value="Center" />
        </Style>
        <Style x:Key="ViewCellBackground" TargetType="Frame">
            <Setter Property="Padding" Value="15,5,15,5" />
            <Setter Property="HasShadow" Value="False" />
            <Setter Property="CornerRadius" Value="0" />
            <Setter Property="BackgroundColor" Value="White" />
        </Style>

        <Style TargetType="Grid">
            <Setter Property="ColumnDefinitions">
                <Setter.Value>
                    <ColumnDefinitionCollection>
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="6*" />
                        <ColumnDefinition Width="1*" />
                    </ColumnDefinitionCollection>
                </Setter.Value>
            </Setter>
        </Style>

        <Color x:Key="DarkColor">#40515b</Color>
        <Color x:Key="DarkColor60pc">#9940515b</Color>
        <Color x:Key="LightGreenColor">#8cc5bf</Color>
        <Color x:Key="OrangeColor">#fcbb5b</Color>
        <Color x:Key="LightGreyColor">#cccccc</Color>
        <Color x:Key="UltraLightGreyColor">#ecedee</Color>
        <Color x:Key="DarkGreyColor">#777777</Color>
        <Color x:Key="OffWhite">#F7F7F7</Color>
        <Color x:Key="FitbitTealColor">#00B0B9</Color>
        <Color x:Key="DawnBlueColor">#4a638a</Color>
        <Color x:Key="DawnBlueLighterColor">#4e819d</Color>
        <Color x:Key="DawnTealColor">#8cc5bf</Color>
        <Color x:Key="DawnSageColor">#add0b1</Color>
        <Color x:Key="GaugeLightGreenColor">#667ddbd0</Color>
        <Color x:Key="GaugeDarkGreenColor">#7ddbd0</Color>
        <Color x:Key="SignalGreen">#50A53B</Color>
        <Color x:Key="SignalAmber">#FCBB5B</Color>
        <Color x:Key="SignalRed">#C3130B</Color>



        <OnPlatform x:Key="TableViewRowHeight" x:TypeArguments="x:Int32">
            <On Platform="Android" Value="65" />
            <On Platform="iOS" Value="60" />
        </OnPlatform>
    </ContentPage.Resources>
