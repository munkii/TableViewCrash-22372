                                <Label Style="{StaticResource TableViewCellLabelStyle}" Text="{local:AppResources Settings_AppleHealthTitle}" />
                                <Label Style="{StaticResource TableViewCellResultLabelStyle}">
                                    <Label.Triggers>
                                        <DataTrigger
