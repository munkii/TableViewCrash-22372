                                <Label Style="{StaticResource TableViewCellLabelStyle}" Text="{local:AppResources Settings_GarminTitle}" />

                                <Label Style="{StaticResource TableViewCellResultLabelStyle}">
                                    <Label.Triggers>
                                        <DataTrigger
