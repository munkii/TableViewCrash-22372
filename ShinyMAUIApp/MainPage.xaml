    xmlns:local="clr-namespace:ShinyMAUIApp"
    x:DataType="local:MainViewModel">
    <ContentPage.Resources>
        <Style x:Key="BaseNumberEntryStyle" TargetType="Entry">
            <Setter Property="FontSize">
                <OnPlatform x:TypeArguments="x:Double">
                    <On Platform="iOS" Value="45" />
                    <On Platform="Android" Value="45" />
                </OnPlatform>
            </Setter>
            <Setter Property="TextColor" Value="{StaticResource DarkColor}" />
            <Setter Property="Keyboard" Value="Numeric" />
            <Setter Property="ReturnType" Value="Send" />
            <Setter Property="HorizontalTextAlignment" Value="Center" />
            <Setter Property="HorizontalOptions" Value="CenterAndExpand" />
            <Setter Property="WidthRequest" Value="150" />
        </Style>
